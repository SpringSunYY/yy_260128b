<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.GalleryInfoMapper">
    
    <resultMap type="GalleryInfo" id="GalleryInfoResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="province"    column="province"    />
        <result property="city"    column="city"    />
        <result property="address"    column="address"    />
        <result property="openingTime"    column="opening_time"    />
        <result property="description"    column="description"    />
        <result property="coverUrl"    column="cover_url"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectGalleryInfoVo">
        select id, name, province, city, address, opening_time, description, cover_url, status, remark, user_id, update_by, create_time, update_time from tb_gallery_info
    </sql>

    <select id="selectGalleryInfoList" parameterType="GalleryInfo" resultMap="GalleryInfoResult">
        <include refid="selectGalleryInfoVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="province != null  and province != ''"> and province like concat('%', #{province}, '%')</if>
            <if test="city != null  and city != ''"> and city like concat('%', #{city}, '%')</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="params.beginUpdateBy != null and params.beginUpdateBy != '' and params.endUpdateBy != null and params.endUpdateBy != ''"> and DATE_FORMAT(update_by, '%Y-%m-%d') between #{params.beginUpdateBy} and #{params.endUpdateBy}</if>
        </where>
    </select>
    
    <select id="selectGalleryInfoById" parameterType="Long" resultMap="GalleryInfoResult">
        <include refid="selectGalleryInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertGalleryInfo" parameterType="GalleryInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_gallery_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="province != null and province != ''">province,</if>
            <if test="city != null and city != ''">city,</if>
            <if test="address != null">address,</if>
            <if test="openingTime != null">opening_time,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="coverUrl != null and coverUrl != ''">cover_url,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="province != null and province != ''">#{province},</if>
            <if test="city != null and city != ''">#{city},</if>
            <if test="address != null">#{address},</if>
            <if test="openingTime != null">#{openingTime},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="coverUrl != null and coverUrl != ''">#{coverUrl},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateGalleryInfo" parameterType="GalleryInfo">
        update tb_gallery_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="province != null and province != ''">province = #{province},</if>
            <if test="city != null and city != ''">city = #{city},</if>
            <if test="address != null">address = #{address},</if>
            <if test="openingTime != null">opening_time = #{openingTime},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="coverUrl != null and coverUrl != ''">cover_url = #{coverUrl},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGalleryInfoById" parameterType="Long">
        delete from tb_gallery_info where id = #{id}
    </delete>

    <delete id="deleteGalleryInfoByIds" parameterType="String">
        delete from tb_gallery_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
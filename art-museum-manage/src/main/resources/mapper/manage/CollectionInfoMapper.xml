<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.CollectionInfoMapper">

    <resultMap type="CollectionInfo" id="CollectionInfoResult">
        <result property="id" column="id"/>
        <result property="categoryId" column="category_id"/>
        <result property="name" column="name"/>
        <result property="imageSrc" column="image_src"/>
        <result property="status" column="status"/>
        <result property="sortType" column="sort_type"/>
        <result property="author" column="author"/>
        <result property="era" column="era"/>
        <result property="material" column="material"/>
        <result property="size" column="size"/>
        <result property="introduction" column="introduction"/>
        <result property="detailedInterpretation" column="detailed_interpretation"/>
        <result property="historicalBackground" column="historical_background"/>
        <result property="collectNumber" column="collect_number"/>
        <result property="remark" column="remark"/>
        <result property="userId" column="user_id"/>
        <result property="updateBy" column="update_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectCollectionInfoVo">
        select id,
               category_id,
               name,
               image_src,
               status,
               sort_type,
               author,
               era,
               material,
               `size`,
               introduction,
               detailed_interpretation,
               historical_background,
               collect_number,
               remark,
               user_id,
               update_by,
               create_time,
               update_time
        from tb_collection_info
    </sql>

    <select id="selectCollectionInfoList" parameterType="CollectionInfo" resultMap="CollectionInfoResult">
        <include refid="selectCollectionInfoVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="categoryId != null ">
                AND (category_id = #{categoryId}
                OR category_id IN ( SELECT t.id FROM tb_category t WHERE
                find_in_set(#{categoryId}, ancestors) ))
            </if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="sortType != null  and sortType != ''">and sort_type = #{sortType}</if>
            <if test="author != null  and author != ''">and author like concat('%', #{author}, '%')</if>
            <if test="era != null  and era != ''">and era like concat('%', #{era}, '%')</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
    </select>

    <select id="selectCollectionInfoById" parameterType="Long" resultMap="CollectionInfoResult">
        <include refid="selectCollectionInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertCollectionInfo" parameterType="CollectionInfo" useGeneratedKeys="true" keyProperty="id">
        insert into tb_collection_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">category_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="imageSrc != null and imageSrc != ''">image_src,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="sortType != null and sortType != ''">sort_type,</if>
            <if test="author != null">author,</if>
            <if test="era != null">era,</if>
            <if test="material != null">material,</if>
            <if test="size != null">`size`,</if>
            <if test="introduction != null">introduction,</if>
            <if test="detailedInterpretation != null">detailed_interpretation,</if>
            <if test="historicalBackground != null">historical_background,</if>
            <if test="collectNumber != null">collect_number,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryId != null">#{categoryId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="imageSrc != null and imageSrc != ''">#{imageSrc},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="sortType != null and sortType != ''">#{sortType},</if>
            <if test="author != null">#{author},</if>
            <if test="era != null">#{era},</if>
            <if test="material != null">#{material},</if>
            <if test="size != null">#{size},</if>
            <if test="introduction != null">#{introduction},</if>
            <if test="detailedInterpretation != null">#{detailedInterpretation},</if>
            <if test="historicalBackground != null">#{historicalBackground},</if>
            <if test="collectNumber != null">#{collectNumber},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateCollectionInfo" parameterType="CollectionInfo">
        update tb_collection_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="imageSrc != null and imageSrc != ''">image_src = #{imageSrc},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="sortType != null and sortType != ''">sort_type = #{sortType},</if>
            <if test="author != null">author = #{author},</if>
            <if test="era != null">era = #{era},</if>
            <if test="material != null">material = #{material},</if>
            <if test="size != null">`size` = #{size},</if>
            <if test="introduction != null">introduction = #{introduction},</if>
            <if test="detailedInterpretation != null">detailed_interpretation = #{detailedInterpretation},</if>
            <if test="historicalBackground != null">historical_background = #{historicalBackground},</if>
            <if test="collectNumber != null">collect_number = #{collectNumber},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCollectionInfoById" parameterType="Long">
        delete
        from tb_collection_info
        where id = #{id}
    </delete>

    <delete id="deleteCollectionInfoByIds" parameterType="String">
        delete from tb_collection_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.GoodsMapper">

    <resultMap type="Goods" id="GoodsResult">
        <result property="id"    column="id"    />
        <result property="collectionId"    column="collection_id"    />
        <result property="name"    column="name"    />
        <result property="price"    column="price"    />
        <result property="sales"    column="sales"    />
        <result property="status"    column="status"    />
        <result property="inventory"    column="inventory"    />
        <result property="imageSrc"    column="image_src"    />
        <result property="description"    column="description"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectGoodsVo">
        select id, collection_id, name, price, sales, status, inventory, image_src, description, remark, user_id, update_by, create_time, update_time from tb_goods
    </sql>

    <select id="selectGoodsList" parameterType="Goods" resultMap="GoodsResult">
        <include refid="selectGoodsVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="collectionId != null ">and collection_id = #{collectionId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
        order by sales desc
    </select>

    <select id="selectGoodsById" parameterType="Long" resultMap="GoodsResult">
        <include refid="selectGoodsVo"/>
        where id = #{id}
    </select>

    <insert id="insertGoods" parameterType="Goods" useGeneratedKeys="true" keyProperty="id">
        insert into tb_goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="collectionId != null">collection_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="price != null">price,</if>
            <if test="sales != null">sales,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="inventory != null">inventory,</if>
            <if test="imageSrc != null and imageSrc != ''">image_src,</if>
            <if test="description != null">description,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="collectionId != null">#{collectionId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="price != null">#{price},</if>
            <if test="sales != null">#{sales},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="inventory != null">#{inventory},</if>
            <if test="imageSrc != null and imageSrc != ''">#{imageSrc},</if>
            <if test="description != null">#{description},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateGoods" parameterType="Goods">
        update tb_goods
        <trim prefix="SET" suffixOverrides=",">
            <if test="collectionId != null">collection_id = #{collectionId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="price != null">price = #{price},</if>
            <if test="sales != null">sales = #{sales},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="inventory != null">inventory = #{inventory},</if>
            <if test="imageSrc != null and imageSrc != ''">image_src = #{imageSrc},</if>
            <if test="description != null">description = #{description},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGoodsById" parameterType="Long">
        delete from tb_goods where id = #{id}
    </delete>

    <delete id="deleteGoodsByIds" parameterType="String">
        delete from tb_goods where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>

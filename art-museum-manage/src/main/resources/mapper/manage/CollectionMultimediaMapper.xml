<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.CollectionMultimediaMapper">

    <resultMap type="CollectionMultimedia" id="CollectionMultimediaResult">
        <result property="id"    column="id"    />
        <result property="collectionId"    column="collection_id"    />
        <result property="name"    column="name"    />
        <result property="status"    column="status"    />
        <result property="type"    column="type"    />
        <result property="sortNum"    column="sort_num"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="updateBy"    column="update_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCollectionMultimediaVo">
        select id, collection_id, name, status, type, sort_num, file_url, remark, user_id, update_by, create_time, update_time from tb_collection_multimedia
    </sql>

    <select id="selectCollectionMultimediaList" parameterType="CollectionMultimedia" resultMap="CollectionMultimediaResult">
        <include refid="selectCollectionMultimediaVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="collectionId != null ">and collection_id = #{collectionId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="type != null  and type != ''">and type = #{type}</if>
            <if test="fileUrl != null  and fileUrl != ''">and file_url = #{fileUrl}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
        order by sort_num,create_time desc
    </select>

    <select id="selectCollectionMultimediaById" parameterType="Long" resultMap="CollectionMultimediaResult">
        <include refid="selectCollectionMultimediaVo"/>
        where id = #{id}
    </select>

    <insert id="insertCollectionMultimedia" parameterType="CollectionMultimedia" useGeneratedKeys="true" keyProperty="id">
        insert into tb_collection_multimedia
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="collectionId != null">collection_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="sortNum != null">sort_num,</if>
            <if test="fileUrl != null and fileUrl != ''">file_url,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="collectionId != null">#{collectionId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="sortNum != null">#{sortNum},</if>
            <if test="fileUrl != null and fileUrl != ''">#{fileUrl},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCollectionMultimedia" parameterType="CollectionMultimedia">
        update tb_collection_multimedia
        <trim prefix="SET" suffixOverrides=",">
            <if test="collectionId != null">collection_id = #{collectionId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
            <if test="fileUrl != null and fileUrl != ''">file_url = #{fileUrl},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCollectionMultimediaById" parameterType="Long">
        delete from tb_collection_multimedia where id = #{id}
    </delete>

    <delete id="deleteCollectionMultimediaByIds" parameterType="String">
        delete from tb_collection_multimedia where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
